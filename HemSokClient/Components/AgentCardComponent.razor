@inject NavigationManager NavigationManager

@if (Agent != null)
{
    <div class="card m-3 rounded" @onclick="@(() => NavigationManager.NavigateTo($"/detailsagent/{Agent.Id}"))">
        <div class="card-img">
            <div class="img-container">
                <img src="@GetProfileImagePath(Agent)" alt="Profilbild" class="m-1" />
            </div>
        </div>
        <div class="card-body">
            <div class="card-title d-flex justify-content-center">
                <div class="card-title-left text-center">
                    <h5>@Agent.FirstName @Agent.LastName</h5>
                    <p>"@Agent.Nickname"</p>
                    <small class="text-muted">@Residences?.Count(r => r.Agent.Id == Agent.Id) objekt till salu</small>
                </div>

            </div>
        </div>
        <div class="card-footer">
            <div class="left-footer">
                <small class="text-muted">@Agent.Agency.Name</small>
            </div>
            <div class="right-footer">
                <img src="@GetLogoImagePath(Agent)" alt="Mäklarfirma logga" class="card-footer-image" />
            </div>
        </div>
    </div>
}
else
{
    <p>Mäklarna kommer vid midnatt</p>
}

@code {
    [Parameter]
    public Agent? Agent { get; set; }
    [Parameter]
    public List<Residence>? Residences { get; set; }

    private string GetProfileImagePath(Agent agent)
    {
        if (!string.IsNullOrEmpty(agent.ImagePath))
        {
            return agent.ImagePath;
        }
        else
        {
            return "images/ghost1.png";
        }
    }
    private string GetLogoImagePath(Agent agent)
    {
        if (!string.IsNullOrEmpty(agent.Agency.ImagePath))
        {
            return agent.Agency.ImagePath;
        }
        else
        {

            return "gif/floatingghost.gif";
        }
    }
}
