@page "/"
@inject IAPIService APIService

<PageTitle>Home</PageTitle>
<h1 style="color: white;">Välkommen till Hemsök(t)</h1>

@if(APIService.currentUser != null)
{
    if (APIService.Agents != null)
    {
        <h1>
            @APIService.Agents.First(s => s.Id == APIService.currentUser.AgentId).FirstName
            @APIService.Agents.First(s => s.Id == APIService.currentUser.AgentId).LastName          
        </h1>
        <button @onclick="@APIService.Logout">Logga ut</button>
    }
 
}


<img src="/images/ghost2.png"/>



