@page "/agencydetails/{id:int}"
@inject IAPIService apiService
@inject NavigationManager NavigationManager

@* Author: Emil Waara*@

@if (agency != null)
{
    <h3>Mäklarfirman: @agency.Name</h3>

    <table class="table table-hover">
        <tr>
            <td><strong>Description:</strong></td>
            <td>@agency.Description</td>
        </tr>
        <tr>
            <td><strong>Adress:</strong></td>
            <td>@agency.Address</td>
        </tr>
        <tr>
            <td><strong>Telefonnummer:</strong></td>
            <td>@agency.PhoneNumber</td>
        </tr>
        <tr>
            <td><strong>Email:</strong></td>
            <td>@agency.Email</td>
        </tr>

        <tr>
            <td><strong>Webbsida:</strong></td>
            <td>@agency.Website</td>
        </tr>

        <tr>
            <td><strong>Logo:</strong></td>
            <td><img src="@agency.ImagePath" alt="Profilbild" style="max-width: 6rem; border-radius: 10%;" /></td>
        </tr>
    </table>
}
else
{
    <p>Hittar ej mäklarfirma som har det IDt</p>
}


@code {
    [Parameter]
    public int Id { get; set; }

    private Agency agency { get; set; }

    protected override async Task OnInitializedAsync()
    {
        //apiService.Agencies = await apiService.GetAllFromApiAsync<Agency>();
        agency = await apiService.GetFromApiAsync<Agency>("api/agency/" + Id);
    }
}

