@inherits LayoutComponentBase
@inject INavigationStateService NavigationStateService
@inject IAPIService apiService
@inject IAuthStateService AuthStateService
<script src="https://kit.fontawesome.com/27b0f27f86.js" crossorigin="anonymous"></script>

<div class="main">
    <div class="NavMenu">
        <div class="NavLogo">
            <a @onclick="@(e => NavigateToPage("/"))">
                <img src="/images/ghost1.png" alt="Logo">
            </a>
        </div>
        <div class="NavLinks">        
            <a class="@((NavigationStateService.GetCurrentUri() == "/filterresidences") ? "active" : "")" @onclick="@(e => NavigateToPage("/filterresidences"))">Sök Bostad</a>

            @if(AuthStateService.IsLoggedIn())
            {
                <a class="@((NavigationStateService.GetCurrentUri() == "/residence") ? "active" : "")" @onclick="@(e => NavigateToPage("/createresidence"))">Sälj Bostad</a>
            }
            
            <a class="@((NavigationStateService.GetCurrentUri() == "/agencylisting") ? "active" : "")" @onclick="@(e => NavigateToPage("/agencylisting"))">Mäklarfirmor</a>
            <a class="@((NavigationStateService.GetCurrentUri() == "/agent") ? "active" : "")" @onclick="@(e => NavigateToPage("/agent"))">Mäklare</a>
@*          <a class="@((NavigationStateService.GetCurrentUri() == "/residence") ? "active" : "")" @onclick="@(e => NavigateToPage("/residence"))">Bostäder</a>
            <a class="@((NavigationStateService.GetCurrentUri() == "/filterresidences") ? "active" : "")" @onclick="@(e => NavigateToPage("/filterresidences"))">Filtrera Bostäder</a>
            <a class="@((NavigationStateService.GetCurrentUri() == "/edit/7b8163ca-2b80-4766-9e9b-c9548a2f8ddb") ? "active" : "")" @onclick="@(e => NavigateToPage("/edit/7b8163ca-2b80-4766-9e9b-c9548a2f8ddb"))">Editera en mäklare</a>
            <a class="@((NavigationStateService.GetCurrentUri() == "/register") ? "active" : "")" @onclick="@(e => NavigateToPage("/register"))">Skapa ny mäklare</a>   
 *@
            @if (AuthStateService.IsSuperAdmin())
            {
                <a class="@((NavigationStateService.GetCurrentUri() == "/agencylisting") ? "active" : "")" @onclick="@(e => NavigateToPage("/agencylisting"))">CRUD Mäklarfirmor</a>
            }
        </div>
        <div class="UserArea">
            @if (!AuthStateService.IsLoggedIn())
            {
                <a @onclick="@(e => NavigateToPage("/login"))">Logga In</a>
            }
            else
            {
                <a @onclick="@(e => NavigateToPage($"/agencydetails/{AuthStateService?.currentUser?.AgencyId}"))">Min mäklarbyrå</a>
                <a @onclick="@(e => NavigateToPage($"/detailsagent/{AuthStateService?.currentUser?.AgentId}"))">Min profil</a>
                <a @onclick="@Logout">Logga ut</a>
            }

        </div>
    </div>
    <div class="mainContent">
        @Body
    </div>
    <div class="Footer">
        <p>Sida skapad av grupp 7 Golf { Marcus Karlsson, Emil Waara, Fredrik Blixt }</p>
    </div>
</div>

@code {
    private Agent currentAgent = new();

    private void Logout()
    {
        AuthStateService.Logout();
        InvokeAsync(StateHasChanged);
    }

    private void NavigateToPage(string page)
    {
        NavigationStateService.NavigateTo(page);
    }
}